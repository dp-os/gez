        "lint:css": "stylelint '**/*.{css,vue}' --fix --aei",
        "lint:type": "tsc --noEmit",
        "test": "vitest --pass-with-no-tests",
        "coverage": "vitest run --coverage --pass-with-no-tests",
        "build": "unbuild"
    },
    "dependencies": {
        "@gez/import": "workspace:*",
        "@types/serialize-javascript": "^5.0.4",
        "find": "^0.3.0",
        "send": "^1.1.0",
        "serialize-javascript": "^6.0.2",
        "write": "^2.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.2",
        "@gez/lint": "3.0.0-alpha.13",
        "@types/find": "^0.2.4",
        "@types/node": "22.9.0",
        "@types/send": "^0.17.4",
        "@types/tar-fs": "^2.0.4",
        "@types/write": "^2.0.4",
        "@vitest/coverage-v8": "2.1.5",
        "stylelint": "16.10.0",
        "typescript": "5.6.3",
        "unbuild": "2.0.0",
        "vitest": "2.1.5"
    },
    "version": "3.0.0-alpha.14",
    "type": "module",
    "private": false,
    "exports": {
