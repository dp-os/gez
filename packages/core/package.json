        },
        "./cli": {
            "import": "./dist/cli/cli.mjs",
            "require": "./dist/cli/cli.cjs",
            "types": "./dist/cli/cli.d.ts"
        }
    },
    "main": "./dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "src",
        "dist",
        "*.mjs",
        "template",
        "public"
    ],
